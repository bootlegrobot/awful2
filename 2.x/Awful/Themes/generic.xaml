    <common:ShadowColorConverter x:Key="RatingIconShadow" />
    
    <DataTemplate x:Key="RatingIconContentTemplate">
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="NoWrap"
                   TextAlignment="Center"
                   FontFamily="Segoe WP Black"
                   Text="{Binding}" />
    </DataTemplate>
    
    <Style TargetType="Controls:RatingIcon">
        <Setter Property="Height"
                Value="40" />
        <Setter Property="Width"
                Value="50" />
        <Setter Property="Content"
                Value="5" />
        <Setter Property="ContentTemplate"
                Value="{StaticResource RatingIconContentTemplate}" />
        <Setter Property="Background"
                Value="gold" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Controls:RatingIcon">
                    <Grid x:Name="ThreadRatingPanel"
                          HorizontalAlignment="Left"
                          Height="{TemplateBinding Height}"
                          VerticalAlignment="Top"
                          Width="{TemplateBinding Width}"
                          Margin="{TemplateBinding Margin}">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.3*" />
                            <RowDefinition Height="0.4*" />
                            <RowDefinition Height="0.3*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.25*" />
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="0.25*" />
                        </Grid.ColumnDefinitions>

                        <Rectangle x:Name="MainBody"
                                   Grid.ColumnSpan="2"
                                   Fill="{TemplateBinding Background}"
                                   Grid.RowSpan="2" />
                        <Rectangle x:Name="RightEdge"
                                   Fill="{TemplateBinding Background}"
                                   Grid.Row="1"
                                   Grid.Column="2" />

                        <Border BorderThickness="1"
                                Grid.Row="2"
                                Grid.RowSpan="2">
                            <Path x:Name="GlpyhDogEarBottom"
                                  Data="M42.0585,-2.7748 L60.9564,-2.7748 L60.9564,15.6258 z"
                                  Stretch="Fill"
                                  UseLayoutRounding="False"
                                  Fill="{Binding Fill, ElementName=MainBody, Converter={StaticResource RatingIconShadow}, ConverterParameter=0.7}"
                                  Margin="-1,-1,-1,-1.167" />
                        </Border>

                        <ContentPresenter x:Name="contentPresenter"
                                          Grid.RowSpan="2"
                                          Grid.Column="1" />

                        <Border Grid.Column="2">
                            <Path x:Name="GlpyhDogEarTop"
                                  Data="M43.5674,-1.26242 L43.5123,13.8614 L59.5027,13.8614 z"
                                  Stretch="Fill"
                                  UseLayoutRounding="False"
                                  Fill="{Binding Fill, ElementName=MainBody, Converter={StaticResource RatingIconShadow}, ConverterParameter=0.7}" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="Controls:ForumItemControl">
        <Setter Property="Foreground"
                Value="{StaticResource PhoneForegroundColor}" />
    <Setter Property="Background"
            Value="{StaticResource PhoneAccentBrush}" />
    <Setter Property="GlyphBrush"
                Value="{StaticResource PhoneAccentBrush}" />
        <Setter Property="SkewX"
                Value="13" />
        <Setter Property="SkewLeft"
                Value="9,0,0,0" />
        <Setter Property="SkewRight"
                Value="9,0,0,0" />
    <Setter Property="GlyphHeight"
            Value="75" />

    <Setter Property="HorizontalContentAlignment"
            Value="Right" />
    <Setter Property="VerticalContentAlignment"
            Value="Center" />
    <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Controls:ForumItemControl">
                    <Border Padding="0,0,0,0"
                            Margin="0,1"
                            d:DesignWidth="375">
                        <telerikPrimitives:RadContextMenu.ContextMenu>
                            <Controls:ForumContextMenu />
                        </telerikPrimitives:RadContextMenu.ContextMenu>
                        <Grid x:Name="LayoutGrid"
                              VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel x:Name="GraphicStack"
                                        VerticalAlignment="Stretch"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        RenderTransformOrigin="0.5,0.5"
                                        Margin="{TemplateBinding SkewLeft}">
                <Rectangle x:Name="MainGlyph"
                           Width="75"
                           RenderTransformOrigin="0.5,0.5"
                           VerticalAlignment="Stretch"
                           Fill="{TemplateBinding Background}"
                           Height="{TemplateBinding GlyphHeight}"
                           Margin="0">
                </Rectangle>
                                <Rectangle x:Name="StripeGlyph"
                                           Width="3"
                                           Margin="2,0,0,0"
                                           Fill="{TemplateBinding GlyphBrush}">
                                </Rectangle>
                                <Rectangle Width="3"
                                           Margin="2,0,0,0"
                                           Fill="{TemplateBinding GlyphBrush}">
                                </Rectangle>
                                <Rectangle Width="3"
                                           Fill="{TemplateBinding GlyphBrush}"
                                           Margin="2,0,0,0">
                                </Rectangle>
                            </StackPanel>

              <ContentPresenter x:Name="ContentPresenter"
                                Grid.Column="1"
                                Content="{TemplateBinding Content}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                Margin="{TemplateBinding Padding}" />

              <Rectangle Height="1"
                         VerticalAlignment="Bottom"
                         Margin="{TemplateBinding SkewRight}"
                         Fill="{TemplateBinding Background}"
                         Grid.Column="1">

              </Rectangle>
                            </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
